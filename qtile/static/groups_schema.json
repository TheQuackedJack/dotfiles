{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "groups": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "matches": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "wm_class": { "type": "string" },
                "role": { "type": "string" },
                "wm_type": { "type": "string" },
                "wm_instance_class": { "type": "string" },
                "net_wm_pid": { "type": "integer" },
                "func": { "type": "string" },
                "wid": { "type": "integer" }
              },
              "additionalProperties": false
            }
          },
          "exclusive": { "type": "boolean", "default": false },
          "spawn": {
            "type": ["string", "array"],
            "items": { "type": "string" }
          },
          "layout": { "type": "string" },
          "layouts": {
            "type": "array",
            "items": { "type": "string" }
          },
          "persist": { "type": "boolean", "default": true },
          "init": { "type": "boolean", "default": true },
          "layout_opts": {
            "type": "object",
            "additionalProperties": true
          },
          "screen_affinity": { "type": "integer" },
          "position": { "type": "integer" },
          "label": { "type": "string" },
          "rules": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "match": {
                  "type": "array",
                  "items": { "$ref": "#/properties/groups/items/properties/matches/items" }
                },
                "float": { "type": "boolean", "default": false },
                "intrusive": { "type": "boolean", "default": false },
                "break_on_match": { "type": "boolean", "default": true }
              },
              "required": ["match"],
              "additionalProperties": false
            }
          }
        },
        "required": ["name"],
        "additionalProperties": false
      }
    }
  },
  "required": ["groups"]
}
